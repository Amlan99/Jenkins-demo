pipeline 
{
    agent any

    stages 
    {
        stage('Build') 
        {
            steps 
            {
                echo "Build stage : Build Create table scripts on DEV environment"
            }
            
        	post {
            	always {
            		emailext to: "s223446723@deakin.edu.au",
            		subject: "Build stage",
            		body: "Build Create table scripts on DEV environment",
            		attachLog: true
            	}
            }
        }
        
        stage('Unit and Integration Tests') 
        {
            steps 
            {
                echo "Unit and Integration Tests stage : Perform tests on DEV environment"
            }
            
            post {
            	always {
            		emailext to: "s223446723@deakin.edu.au",
            		subject: "Unit and Integration Tests stage",
            		body: "Perform tests on DEV environment",
            		attachLog: true
            	}
            }
        }
        
        stage('Deploy to Staging') 
        {
            steps 
            {
                echo "Deploy to Staging stage : Deploy to staging database"
            }
        }

        stage('Integration Tests on Staging') 
        {
            steps 
            {
                echo "Integration Tests on Staging : Perform Integration Tests on Staging database"
            }
            
            post {
            	always {
            		emailext to: "s223446723@deakin.edu.au",
            		subject: "Integration Tests on Staging",
            		body: "Perform Integration Tests on Staging AWS EC2 using Selenium",
            		attachLog: true
            	}
            }
        }
                
        stage('Deploy to Production') 
        {
            steps 
            {
                echo "Deploy to Production stage : Code is being deployed to Production Environment"
            }
            
        	post {
            	always {
            		emailext to: "s223446723@deakin.edu.au",
            		subject: "Deploy to Production stage",
            		body: "Code is being deployed to Production Environment",
            		attachLog: true
            	}
            }
            
        }
    }
}
